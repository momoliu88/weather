<div>
	<ul class="breadcrumb">
		<li>
			<a href="#">Home</a> <span class="divider">/</span>
		</li>
		<li>
			<a href="#">Dashboard</a>
		</li>
	</ul>
</div>
<div class="row-fluid">
	<div class="box span12" id="tasks">
		<div class="box-header well">
			<h2> <i class="icon-edit"></i> 群发任务</h2>
			<div class="box-icon">
				<a class="btn btn-minimize btn-round" onClick="toggle()" ><i class="icon-chevron-up"></i></a>
				<a data-remote="true" href="dashboard/create_tasks" class="btn btn-round" onClick="displayWaitingInfo()">
								<i class="icon-plus"></i>
				</a>
			</div>
		</div>
		
   </div>
   <!-- new tasks-->
</div>

<!-- list tasks-->
<div class="row-fluid">
	<div class="box span12" id="sended_task">
		<div class="box-header well" >
			<h2> <i class="icon-tasks"></i> 任务信息表 </h2>
			<div class="box-icon">
				<a class="btn btn-minimize btn-round" href="#"><i class="icon-chevron-up"></i></a>
			</div>
		</div>
		<div class="box-content" id="sendtasksDetail">
  	  	<%=render "tasks/index"%>
		</div>
    </div>
</div>
<script>
 	$('.btn-minimize').click(function(e){
		e.preventDefault();
		var $target = $(this).parent().parent().next('.box-content');
		if($target.is(':visible')) $('i',$(this)).removeClass('icon-chevron-up').addClass('icon-chevron-down');
		else 					   $('i',$(this)).removeClass('icon-chevron-down').addClass('icon-chevron-up');
		$target.slideToggle();
	});
</script>
