<div class="box-content" id="contents">
<%if @contents %>
<div class="dataTables_wrapper" role="grid">
	<%=form_tag('contents/save_contents',:method=>:post,:remote=>true) do-%>
	<fieldset>
<div class="control-group">
<table class="table table-striped table-bordered bootstrap-datatable datatable">
  <tr role="row">
   	 	<th rowspan='1' colspan='1' style="width: 50px;">城市</th>
   	 	<th rowspan='1' colspan='1' style="width: 206px;">天气信息</th>
   	 	<th rowspan='1' colspan='1' style="width: 206px;">操作</th>
  </tr>
  <% i = 1%>
 	 <% @contents.each do |content| %>
  		<tr role="row" id="row<%=i%>">
	  	  <td disable="false"><%= content.cityname %></td>
   	  	  <td class="info" code="<%=content.area_code%>"><div contenteditable><%= content.content %></div>
		      <input type="hidden" id="<%=content.area_code%>_1" name="infos[<%=content.area_code%>]"/>
		  </td>   
		  <td>
			  <a href="#" onClick="deleteRow(row<%=i%>)"class="btn btn-danger"><i class="icon-trash icon-white"></i> 删除</a>
		  </td>  
  		</tr>		
		<%i = i+1%>
  	 <%end%>
  </table>  
    </div>
  <div class="form-actions">
	  <button class="btn btn-primary" type="submit" onClick="contentSubmit()">提交</button>
	  <button class="btn" type="reset">取消</button>
  </div>
</fieldset>
<% end -%>
</div>
<%end%>
</div>
