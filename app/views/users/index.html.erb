<div class="row-fluid">
	<div class="box span12">
		<div class="box-header well">
			<h2> <i class="icon-user"></i> 用户 </h2>
		</div>
		<div class="box-content">
			<div class="dataTables_wrapper" role="grid">
<table id="DataTables_Table_0" class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
  <tr role="row">
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1">姓名</th>
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1">手机</th>
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1">城市</th>
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1">区号</th>
	<th role="columnheader" tabindex="0" rowspan="1" colspan="1">性别</th>
	<th role="columnheader" tabindex="0" rowspan="1" colspan="1">订购时间</th>
	<th role="columnheader" tabindex="0" rowspan="1" colspan="1">退订时间</th>
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1"></th>
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1"></th>
    <th role="columnheader" tabindex="0" rowspan="1" colspan="1"></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.mobile_number %></td>
    <td><%= user.location %></td>
    <td><%= user.area_code %></td>
    <td><%if (user.sex == 1)%>
		<%="male"%>
	    <%else%>
		<%="female"%>
		<%end%>
	</td>
    <td><%= user.subscrip_time %></td>
    <td><%= user.quit_time %></td>
	
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

</div>
</div>
</div>
</div>
